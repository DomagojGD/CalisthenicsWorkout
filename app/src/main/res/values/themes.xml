<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalisthenicsWorkout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/progress_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_mode_gray_background</item>
        <!-- Customize your theme here. -->

        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">

        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme_Dialog" parent="@style/ThemeOverlay.AppCompat.Dialog">

        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    
    <style name="PopupMenu" parent="android:Widget.PopupMenu">
        <item name="android:background">@color/ripple_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/audiowide</item>
    </style>
</resources>