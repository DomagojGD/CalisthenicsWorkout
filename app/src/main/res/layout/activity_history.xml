<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HistoryActivity"
    android:background="@color/dark_mode_gray_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHistory"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        android:background="@color/dark_mode_gray_background"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPreviousMonth"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="&#60;"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/audiowide"
        android:background="@color/dark_mode_gray_background"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarHistory"/>

    <TextView
        android:id="@+id/tvMonthYear"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Month year"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/audiowide"
        app:layout_constraintStart_toEndOf="@id/btnPreviousMonth"
        app:layout_constraintEnd_toStartOf="@id/btnNextMonth"
        app:layout_constraintTop_toBottomOf="@id/toolbarHistory"
        android:layout_margin="10dp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNextMonth"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="&#62;"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/audiowide"
        android:background="@color/dark_mode_gray_background"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarHistory"/>

    <LinearLayout
        android:id="@+id/llDaysOfWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPreviousMonth"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="M"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/audiowide"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/audiowide"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="W"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/audiowide"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/audiowide"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="F"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/audiowide"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/audiowide"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/audiowide"
            android:layout_weight="1"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llDaysOfWeek"
        app:layout_constraintBottom_toTopOf="@id/llLastWorkoutOne"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/llLastWorkoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llLastWorkoutTwo"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/btn_white_stroke_background">

        <TextView
            android:id="@+id/tvLastWorkoutOneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day One"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/audiowide"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLastWorkoutTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/btn_white_stroke_background">

        <TextView
            android:id="@+id/tvLastWorkoutTwoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day Two"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/audiowide"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>