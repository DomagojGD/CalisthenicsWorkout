<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rest_timer_dialog_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvRestTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REST TIMER"
        android:textSize="16sp"
        android:textColor="@color/dark_mode_gray_background"
        android:fontFamily="@font/audiowide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvTimerBetween"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@color/dark_mode_gray_background"
        android:textSize="30sp"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRestTimer"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/tvTimerMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02"
        android:textColor="@color/dark_mode_gray_background"
        android:textSize="30sp"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/tvTimerBetween"
        app:layout_constraintTop_toBottomOf="@id/tvRestTimer"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/tvTimerSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="@color/dark_mode_gray_background"
        android:textSize="30sp"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tvTimerBetween"
        app:layout_constraintTop_toBottomOf="@id/tvRestTimer"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSkipTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_light_gray_ripple_background"
        android:text="SKIP"
        android:textColor="@color/dark_mode_gray_background"
        android:fontFamily="@font/audiowide"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTimerBetween"
        android:layout_margin="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>