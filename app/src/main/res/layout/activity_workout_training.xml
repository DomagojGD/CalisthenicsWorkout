<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WorkoutTrainingActivity"
    android:background="@color/dark_mode_gray_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTraining"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        android:background="@color/dark_mode_gray_background"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarTraining"
        app:layout_constraintBottom_toTopOf="@id/btnWorkoutFinish"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvWorkoutExerciseNameOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUSH UPS"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/audiowide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <FrameLayout
                android:id="@+id/flWorkoutExerciseMenuOne"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvWorkoutExerciseNameOne"
                android:background="@drawable/circular_frame_layout_button_ripple_bg"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ivWorkoutExerciseMenuOne"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_workout_exercise_menu" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvExercisesOne"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWorkoutExerciseNameOne"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddSetOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recycler_view_item_workout_set_background"
                android:text="Add new set"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/audiowide"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvExercisesOne"
                android:padding="10dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/tvWorkoutExerciseNameTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEG RAISES"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/audiowide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnAddSetOne"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <FrameLayout
                android:id="@+id/flWorkoutExerciseMenuTwo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvWorkoutExerciseNameTwo"
                app:layout_constraintBottom_toBottomOf="@id/tvWorkoutExerciseNameTwo"
                android:background="@drawable/circular_frame_layout_button_ripple_bg"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivWorkoutExerciseMenuTwo"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_workout_exercise_menu" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvExercisesTwo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWorkoutExerciseNameTwo"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddSetTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recycler_view_item_workout_set_background"
                android:text="Add new set"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/audiowide"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvExercisesTwo"
                android:padding="10dp"
                android:layout_margin="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnWorkoutFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="FINISH"
        android:background="@drawable/btn_gray_ripple_background"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>