<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/recycler_view_item_workout_set_background"
    android:padding="10dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/ivUncheckedCircle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/unchecked_workout_exercise_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"/>

    <FrameLayout
        android:id="@+id/flExerciseDoneCheck"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/checked_exercise_done_circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/ivExerciseDoneCheck"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/ic_check"
            android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tvWorkoutExerciseNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivUncheckedCircle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etNumberOfReps"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tvReps"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="50dp"
        android:text="10"
        android:textSize="16sp"
        android:textAlignment="center"
        android:inputType="number"
        android:textColor="@color/white"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        android:background="@drawable/item_number_of_reps_background"/>

    <TextView
        android:id="@+id/tvReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPS"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>