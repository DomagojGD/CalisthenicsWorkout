<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_gray_ripple_background"
    android:padding="5dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tvExerciseNumber"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="#1"
        android:textColor="@color/white"
        android:fontFamily="@font/audiowide"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvExerciseName"
        android:layout_width="175dp"
        android:layout_height="match_parent"
        android:text="Wall Push Ups"
        android:textColor="@color/white"
        android:fontFamily="@font/audiowide"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvExerciseNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pbExerciseProgress"/>

    <ProgressBar
        android:id="@+id/pbExerciseProgress"
        style="@style/Widget.Material3.CircularProgressIndicator.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvExerciseName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvExerciseProgress"
        android:indeterminate="false"
        android:progressDrawable="@drawable/exercise_progress_bar"
        android:max="100"
        android:progress="50"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tvExerciseProgress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="50%"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/audiowide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>